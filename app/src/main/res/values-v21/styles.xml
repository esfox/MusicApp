<resources>>

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fastScrollThumbDrawable">@drawable/scroll_thumb</item>
        <item name="android:fastScrollPreviewBackgroundRight">@drawable/scroll_preview_drawable</item>
        <item name="android:fastScrollTrackDrawable">@drawable/scroll_track</item>
        <item name="android:fastScrollOverlayPosition">atThumb</item>
        <item name="android:fastScrollTextColor">#FFFFFF</item>
        <item name="discreteSeekBarStyle">@style/AppTheme.DiscreteSeekBarStyle</item>
    </style>

    <style name="AppTheme.DiscreteSeekBarStyle" parent="Widget.DiscreteSeekBar">
        <item name="dsb_progressColor">@color/colorPrimary</item>
        <item name="dsb_indicatorColor">@color/colorPrimary</item>
        <item name="dsb_indicatorTextAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/AlertDialogTitleStyle</item>
        <item name="android:colorPrimary">@color/colorPrimaryLight</item>
        <item name="android:colorAccent">@color/colorPrimaryLight</item>
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

</resources>
