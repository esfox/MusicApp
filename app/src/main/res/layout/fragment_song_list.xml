<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/song_list_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <ListView
        android:id="@+id/song_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/song_list_toolbar_layout"
        android:fastScrollEnabled="true"
        android:scrollingCache="false"
        android:animationCache="false"
        android:smoothScrollbar="true"
        tools:fastScrollAlwaysVisible="true"/>

    <include
        android:id="@+id/song_list_toolbar_layout"
        layout="@layout/list_toolbar"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/song_list_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/done_36dp"
        app:useCompatPadding="true"/>

</RelativeLayout>
