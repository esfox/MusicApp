<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/song_list_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <ListView
        android:id="@+id/song_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/song_list_titlebar"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="true"
        android:scrollingCache="false"
        android:animationCache="false"/>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/song_list_titlebar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/song_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/toolbar_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    android:src="@drawable/all_songs_36dp"
                    android:tint="@color/background_primary"/>

                <TextView
                    android:id="@+id/favorites_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/toolbar_icon"
                    android:layout_toEndOf="@+id/toolbar_icon"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:text="All Songs"
                    tools:ignore="HardcodedText"/>

                <ImageView
                    android:id="@+id/song_list_toolbar_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/song_list_toolbar_menu"
                    android:layout_toStartOf="@+id/song_list_toolbar_menu"
                    android:padding="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/sort_24dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/song_list_toolbar_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/more_vertical_24dp"/>

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/songlist_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/background_material"
        android:visibility="gone"
        android:alpha="0"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/selection_toolbar_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/close_24dp"/>

            <TextView
                android:id="@+id/selection_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/text_primary"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/selection_toolbar_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/more_vertical_24dp"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/song_list_titlebar"
        android:background="@drawable/toolbar_shadow"/>

</RelativeLayout>