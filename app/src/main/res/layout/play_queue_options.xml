<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <!-- TODO: Change actions-->

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryLight"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="3"
        tools:ignore="ContentDescription">

        <RelativeLayout
            android:id="@+id/queue_list_options_add_to"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/queue_list_options_add_to_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:src="@drawable/plus_36dp"
                android:tint="@color/background_primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/queue_list_options_add_to_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/options_add_to"
                android:textColor="@color/background_primary"
                android:textSize="@dimen/options_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/queue_list_options_queue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/queue_list_options_queue_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:src="@drawable/queue_36dp"
                android:tint="@color/background_primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/queue_list_options_queue_icon"
                android:layout_centerHorizontal="true"
                android:text="@string/options_queue"
                android:textColor="@color/background_primary"
                android:textSize="@dimen/options_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/queue_list_options_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/queue_list_options_more_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:src="@drawable/more_horizontal_36dp"
                android:tint="@color/background_primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/queue_list_options_more_icon"
                android:layout_centerHorizontal="true"
                android:text="@string/options_more"
                android:textColor="@color/background_primary"
                android:textSize="@dimen/options_text_size"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>