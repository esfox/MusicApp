<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/song_list_options_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="3"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:id="@+id/song_list_options_queue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/song_list_options_queue_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:src="@drawable/queue_36dp"
            android:tint="@color/background_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_list_options_queue_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/options_queue"
            android:textColor="@color/background_primary"
            android:textSize="@dimen/options_text_size"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/song_list_options_play_next"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/song_list_options_play_next_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:src="@drawable/play_next_36dp"
            android:tint="@color/background_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_list_options_play_next_icon"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/options_add_to"
            android:textColor="@color/background_primary"
            android:textSize="@dimen/options_text_size"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/song_list_options_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/song_list_options_more_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:src="@drawable/more_horizontal_36dp"
            android:tint="@color/background_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_list_options_more_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/options_more"
            android:textColor="@color/background_primary"
            android:textSize="@dimen/options_text_size"/>

    </RelativeLayout>
</LinearLayout>