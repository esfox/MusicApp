<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_primary"
        tools:context="com.music.app.MainActivity">

        <RelativeLayout
            android:id="@+id/fragment_area_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/now_playing_bar_layout"
                layout="@layout/now_playing_bar"/>

            <include
                layout="@layout/content_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/now_playing_bar_layout"
                android:layout_above="@+id/control_buttons"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/now_playing_bar_layout"
                android:background="@drawable/toolbar_shadow"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_above="@+id/control_buttons"
                android:background="@drawable/toolbar_shadow_upside_down"/>

            <RelativeLayout
                android:id="@+id/control_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@color/background_material"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageButton
                    android:id="@+id/previous_button"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/play_button"
                    android:layout_toStartOf="@+id/play_button"
                    android:background="@drawable/fab"
                    android:src="@drawable/fast_rewind_24dp"/>

                <ImageButton
                    android:id="@+id/play_button"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/fab"
                    android:src="@drawable/play_24dp"/>

                <ImageButton
                    android:id="@+id/next_button"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/play_button"
                    android:layout_toEndOf="@+id/play_button"
                    android:background="@drawable/fab"
                    android:src="@drawable/fast_forward_24dp"/>

                <!--<android.support.design.widget.FloatingActionButton-->
                <!--android:id="@+id/play_button"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--app:useCompatPadding="true"-->
                <!--app:srcCompat="@drawable/play_36dp"/>-->

                <!--<android.support.design.widget.FloatingActionButton-->
                <!--android:id="@+id/previous_button"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toLeftOf="@+id/play_button"-->
                <!--android:layout_toStartOf="@+id/play_button"-->
                <!--app:fabSize="mini"-->
                <!--app:useCompatPadding="true"-->
                <!--app:srcCompat="@drawable/fast_rewind_24dp"/>-->

                <!--<android.support.design.widget.FloatingActionButton-->
                <!--android:id="@+id/next_button"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toEndOf="@+id/play_button"-->
                <!--android:layout_toRightOf="@+id/play_button"-->
                <!--app:fabSize="mini"-->
                <!--app:useCompatPadding="true"-->
                <!--app:srcCompat="@drawable/fast_forward_24dp"/>-->

            </RelativeLayout>

        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/background_material"
        android:theme="@style/NavigationViewStyle"
        android:scrollbarThumbVertical="@android:color/transparent"
        app:itemBackground="@drawable/navigation_drawer_item_background"
        app:itemTextColor="@color/navigation_drawer_item"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_items"/>
    
</android.support.v4.widget.DrawerLayout>