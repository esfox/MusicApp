<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlists_list_item_background"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginBottom="3dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="1dp"
    app:cardBackgroundColor="@color/background_alternate">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/playlist_list_item_covers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/playlists_list_item_name"
            tools:ignore="ContentDescription">

            <ImageView
                android:id="@+id/playlists_list_item_cover_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/album_art_placeholder"/>

            <ImageView
                android:id="@+id/playlists_list_item_cover_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/album_art_placeholder"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/playlists_list_item_cover_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/album_art_placeholder"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/playlists_list_item_cover_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/album_art_placeholder"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/playlists_list_item_cover_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/album_art_placeholder"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/playlists_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            android:layout_above="@+id/playlist_list_item_tracks_count"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Sample Text"/>

        <TextView
            android:id="@+id/playlist_list_item_tracks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Sample Text"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/playlist_list_item_covers">

            <ImageButton
                android:id="@+id/playlist_list_item_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/more_vertical_24dp"
                tools:ignore="ContentDescription"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>